- var CHECK_IN = LANG.check_in;

section.check-in#check-in
	.container
		.check-in__wrapper
			.check-in__left
				h2.check-in__title!= CHECK_IN.title
				p.check-in__text!= CHECK_IN.desc
			.check-in__right
				form.form(action="/", method="post")
					.form__input-wrap
						input.form__input.js-input.form-control(type="text", name="name" required)
						label.form__label.js-label!= CHECK_IN.label_1
					.form__input-wrap
						input.form__input.js-input.form-control(type="tel", name="phone" required)
						label.form__label.js-label!= CHECK_IN.label_2
					.form__input-wrap
						input.form__input.js-input.form-control(type="text", name="telegram" required)
						label.form__label.js-label!= CHECK_IN.label_3
					.form__input-wrap
						input.form__input.js-input.form-control(type="text", name="comment" required)
						label.form__label.js-label!= CHECK_IN.label_4
					button.form__btn.btn!= CHECK_IN.btn