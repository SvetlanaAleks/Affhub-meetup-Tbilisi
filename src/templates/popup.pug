mixin popup(page)
	.popup#order-popup.js-popup
		.popup__wrap
			.popup__close.js-close
				img(src="img/svg/close.svg", alt="close")
			.popup__content
				.popup__left
					h4.popup__title Выберите язык для отображение на сайте
					p.popup__text Select the language to be displayed on the site
				.popup__right
					.dropdown.popup__dropdown
						button#dropdownMenuButton1.btn.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-expanded='false') Русский
						ul.dropdown-menu(aria-labelledby='dropdownMenuButton1')
							li
								a(href=`/${page}.html`) Русский
							li
								a(href=`/english/`) Английский
							li
								a(href=`/georgian/`) Грузинский